{% extends "base.twig" %}

{% block title %}Students by Task{% endblock %}
{% block body %}
<div class="container" id="app">
    <input type="text" class="form-control" v-model="id" value="1" v-on:change="getStudentsCountByTask()" placeholder="Введите ID задания">
    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Task ID - ${ id } 
            <span class="badge badge-primary badge-pill">${ count }</span>
        </li>
    </ul>
</div>
{% endblock %}