{% extends "base.twig" %}

{% block title %}Workload{% endblock %}
{% block body %}
<div class="container" id="app">
    <ul class="list-group">
        {% for taskStats in tasksStats %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ taskStats.title}}
                    <span class="badge badge-primary badge-pill">{{ taskStats.relation }}</span>
                </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}